<section>
  <div class="container mt-5">
    <div class="row">
      {{#each products}}
      <div class="col-md-3">
        <div class="card" style="width: 18rem;">
          {{#if imageUrl}}
          {{{imageDataURI imageUrl 200 200}}}
          {{else}}
          No Image Available
          {{/if}}

          <div class="card-body">
            <h5 class="card-title">{{this.name}}</h5>
            <h5 class="card-title">{{this.category}}</h5>
            <h5 class="card-title">{{this.price}}</h5>
            <p class="card-text">{{this.description}}</p>
            <a href="/cart.hbs" class="btn btn-primary">Add to cart</a>
          </div>
        </div>
      </div>
      {{/each}}
    </div>
  </div>
</section>